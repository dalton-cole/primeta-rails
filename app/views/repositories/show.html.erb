<div class="container repository-container">
  <div class="header">
    <div class="breadcrumbs">
      <%= link_to "Repositories", repositories_path %> / <%= @repository.name %>
    </div>
    <div class="actions">
      <% if current_user.admin? %>
        <%= button_to "Sync Repository", sync_repository_path(@repository), method: :post, class: "btn btn-outline" %>
      <% end %>
    </div>
  </div>

  <div class="repository-content" data-controller="inline-editor" data-inline-editor-repository-id-value="<%= @repository.id %>">
    <div class="sidebar">
      <h3>Files</h3>
      
      <% if @repository.repository_files.any? %>
        <div class="file-explorer" data-controller="file-explorer">
          <input type="text" id="file-search" placeholder="Search files..." class="file-search">
          <div class="file-tree">
            <%= render partial: 'directory_tree', locals: { tree: @directory_structure, level: 0, parent_path: '' } %>
          </div>
        </div>
      <% else %>
        <div class="empty-state">
          <p>No files available yet. Repository may need to be synced.</p>
        </div>
      <% end %>
    </div>
    
    <div class="content">
      <div class="info-panel" data-inline-editor-target="infoPanel">
        <h1 class="repository-title"><%= @repository.name %></h1>
        <p class="repository-description"><%= @repository.description %></p>
        <div class="repository-meta">
          <span class="status"><%= @repository.sync_status %></span>
        </div>
        
        <hr class="info-divider">
        
        <h2>Repository Information</h2>
        <p>This repository contains <%= @repository.repository_files.count %> files.</p>
        <p>Clone URL: <code><%= @repository.clone_url %></code></p>
        <p>Default Branch: <code><%= @repository.default_branch %></code></p>
        
        <h3>Getting Started</h3>
        <p>Select a file from the sidebar to view its content and start tracking your progress.</p>
      </div>
      
      <div class="editor-container" data-inline-editor-target="editorContainer" style="display: none;">
        <!-- Editor content will be dynamically generated -->
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // File search functionality
    const searchInput = document.getElementById('file-search');
    const fileItems = document.querySelectorAll('.file-item');
    
    searchInput.addEventListener('input', function() {
      const searchTerm = this.value.toLowerCase();
      
      fileItems.forEach(function(item) {
        const fileName = item.querySelector('a').textContent.toLowerCase();
        const shouldShow = fileName.includes(searchTerm);
        
        item.style.display = shouldShow ? 'block' : 'none';
        
        // If this is a file in a directory, also show the directory
        if (shouldShow) {
          let parent = item.parentNode;
          while (parent && parent.classList.contains('dir-contents')) {
            parent.parentNode.classList.add('expanded');
            parent = parent.parentNode.parentNode;
          }
        }
      });
    });
    
    // Mark files as viewed when clicked
    document.addEventListener('click', function(event) {
      const fileLink = event.target.closest('a[data-file-id]');
      if (fileLink) {
        fileLink.classList.add('viewed-file');
      }
    });
  });
</script>

