<div class="container repository-container">
  <div class="header">
    <div class="breadcrumbs">
      <%= link_to "Repositories", repositories_path %> / <%= @repository.name %>
    </div>
    <div class="actions">
      <% if current_user.admin? %>
        <%= button_to "Sync Repository", sync_repository_path(@repository), method: :post, class: "btn btn-outline" %>
      <% end %>
    </div>
  </div>

  <div class="repository-content" data-controller="inline-editor" 
       data-inline-editor-repository-id-value="<%= @repository.id %>">
    <div class="sidebar">
      <h3>Files</h3>
      
      <% if @repository.repository_files.any? %>
        <div class="file-explorer" data-controller="file-explorer">
          <div class="file-tree">
            <%= render partial: 'directory_tree', locals: { tree: @directory_structure, level: 0, parent_path: '' } %>
          </div>
        </div>
      <% else %>
        <div class="empty-state">
          <p>No files available yet. Repository may need to be synced.</p>
        </div>
      <% end %>
    </div>
    
    <div class="content">
      <div class="info-panel" data-inline-editor-target="infoPanel">
        <h1 class="repository-title"><%= @repository.name %></h1>
        <p class="repository-description"><%= @repository.description %></p>
        <div class="repository-meta">
          <span class="status"><%= @repository.sync_status %></span>
        </div>
        
        <hr class="info-divider">
        
        <h2>Your Progress</h2>
        
        <%= turbo_stream_from "repository_#{@repository.id}_progress" %>
        <%= render partial: 'repositories/progress', locals: {
            repository: @repository,
            total_files_count: @total_files_count,
            viewed_files_count: @viewed_files_count,
            files_progress_percentage: @files_progress_percentage,
            key_files_count: @key_files_count,
            viewed_key_files_count: @viewed_key_files_count,
            key_files_progress_percentage: @key_files_progress_percentage
        } %>
        
        <h3>Getting Started</h3>
        <p>Select a file from the sidebar to view its content and start tracking your progress.</p>
        
        <% if @key_files.any? %>
          <h3>Key Files</h3>
          <p>These files have been marked as particularly important to understanding this repository:</p>
          <div class="key-files-list">
            <% @key_files.each do |file| %>
              <div class="key-file-item">
                <span class="key-file-star">â˜…</span>
                <%= link_to file.path, "#", 
                    data: {
                      path: file.path,
                      file_id: file.id,
                      action: "click->inline-editor#showFile"
                    } %>
              </div>
            <% end %>
            <% unless current_user.admin? %>
              <div class="key-file-note">
                <small>Note: Only administrators can mark files as key files.</small>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <div class="editor-container" data-inline-editor-target="editorContainer" style="display: none;">
        <!-- Editor content will be dynamically generated -->
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Mark files as viewed when clicked
    document.addEventListener('click', function(event) {
      const fileLink = event.target.closest('a[data-file-id]');
      if (fileLink) {
        fileLink.classList.add('viewed-file');
      }
    });
  });
</script>

