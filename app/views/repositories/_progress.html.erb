<div class="progress-section" id="repository_progress_<%= repository.id %>" data-controller="progress-tracker" data-progress-tracker-repository-id-value="<%= repository.id %>">
  <%= turbo_stream_from "repository_#{repository.id}_progress" %>
  <div class="progress-metric" id="files_metric_<%= repository.id %>">
    <%= render "repositories/files_progress_metric_content", repository: repository, total_files_count: total_files_count, viewed_files_count: viewed_files_count, files_progress_percentage: files_progress_percentage %>
  </div>
  
  <div id="key_files_metric_<%= repository.id %>">
    <%= render "repositories/key_files_progress_metric_content", repository: repository, key_files_count: key_files_count, viewed_key_files_count: viewed_key_files_count, key_files_progress_percentage: key_files_progress_percentage %>
  </div>
  
  <!-- Achievement Badges -->
  <div class="achievement-badges" id="achievement_badges_<%= repository.id %>">
    <%= render "repositories/achievement_badges_content", key_files_count: key_files_count, files_progress_percentage: files_progress_percentage, key_files_progress_percentage: key_files_progress_percentage %>
  </div>
</div> 