<div class="container repositories-container">
  <div class="header">
    <h1>Code Repositories</h1>
    <% if user_signed_in? && current_user.admin? %>
      <%= link_to "Add Repository", new_repository_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <% unless user_signed_in? %>
    <div class="login-banner">
      <div class="banner-content">
        <h3>Sign in to explore repositories</h3>
        <p>You can browse the available repositories, but you'll need to sign in to view their content and track your learning progress.</p>
        <div class="banner-actions">
          <%= button_to "Sign in with GitHub", user_github_omniauth_authorize_path, data: { turbo: false }, class: "btn btn-primary" %>
          <%= link_to "Sign in with Email", new_user_session_path, class: "btn btn-outline" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="repositories-list">
    <% if @repositories.any? %>
      <div class="repo-grid">
        <% @repositories.each do |repository| %>
          <div class="repo-card">
            <h3><%= repository.name %></h3>
            <p class="description"><%= repository.description.present? ? truncate(repository.description, length: 100) : "No description provided" %></p>
            <p class="meta">
              <span class="status"><%= repository.status.capitalize %></span>
              <span class="files"><%= repository.file_count %> files</span>
            </p>
            <%= link_to "Explore", user_signed_in? ? repository_path(repository) : new_user_session_path, 
                class: "btn btn-outline",
                data: { turbo_frame: "_top" } %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="empty-state">
        <p>No repositories available yet.</p>
        <% if user_signed_in? && current_user.admin? %>
          <p>Get started by adding a repository.</p>
          <%= link_to "Add Repository", new_repository_path, class: "btn btn-primary" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<style>
  body {
    background-color: var(--dark-bg-color);
    color: var(--text-light-color);
  }

  .container {
    background-color: var(--dark-bg-color);
  }

  .repositories-container {
    background-color: var(--dark-bg-color);
    color: var(--text-light-color);
    padding: 2rem 0;
    min-height: calc(100vh - 70px);
  }
  
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-bottom: 1rem;
  }
  
  .header h1 {
    color: var(--text-light-color);
    margin: 0;
  }
  
  .login-banner {
    background-color: var(--dark-bg-color);
    border-radius: var(--border-radius);
    padding: 1.5rem;
    margin-bottom: 2rem;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    border: 1px solid rgba(52, 152, 219, 0.2);
  }
  
  .banner-content {
    text-align: center;
  }
  
  .banner-content h3 {
    color: var(--text-light-color);
    margin-bottom: 0.75rem;
  }
  
  .banner-content p {
    color: var(--text-light-color);
    opacity: 0.8;
    margin-bottom: 1.25rem;
  }
  
  .banner-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .repo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }
  
  .repo-card {
    background-color: #34495e;
    color: var(--text-light-color);
    border-radius: var(--border-radius);
    padding: 1.5rem;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    transition: transform 0.2s, box-shadow 0.2s;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }
  
  .repo-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 25px rgba(0, 0, 0, 0.4);
    border-color: var(--primary-color);
  }
  
  .repo-card h3 {
    margin-top: 0;
    margin-bottom: 0.5rem;
    color: var(--text-light-color);
  }
  
  .description {
    color: var(--text-light-color);
    opacity: 0.8;
    margin-bottom: 1rem;
    min-height: 3rem;
  }
  
  .meta {
    display: flex;
    justify-content: space-between;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    color: var(--text-light-color);
    opacity: 0.7;
  }
  
  .meta .status {
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    background-color: rgba(52, 152, 219, 0.2);
    font-size: 0.8rem;
  }
  
  .empty-state {
    text-align: center;
    padding: 3rem;
    background-color: #34495e;
    color: var(--text-light-color);
    border-radius: var(--border-radius);
    border: 1px solid rgba(255, 255, 255, 0.05);
  }
  
  /* Consistent Button Styles with main app */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-height: 40px;
    padding: 0.5rem 1.2rem;
    border-radius: var(--border-radius);
    font-weight: 500;
    transition: all 0.2s ease;
    font-family: 'Inter', sans-serif;
    border: none;
    cursor: pointer;
    text-decoration: none;
  }
  
  .btn-primary {
    background-color: var(--primary-color);
    color: white;
  }
  
  .btn-primary:hover {
    background-color: #2980b9;
    transform: translateY(-2px);
  }
  
  .btn-outline {
    background-color: transparent;
    color: var(--primary-color);
    border: 1px solid var(--primary-color);
  }
  
  .btn-outline:hover {
    background-color: var(--primary-color);
    color: white;
    transform: translateY(-2px);
  }
  
  @media (max-width: 768px) {
    .banner-actions {
      flex-direction: column;
    }
    
    .repositories-container {
      padding: 1rem;
    }
  }
</style>
